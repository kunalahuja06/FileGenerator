<UserControl x:Class="FileGenerator.PathControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FileGenerator"
             mc:Ignorable="d" 
             d:DesignHeight="60" d:DesignWidth="200">

    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBox KeyUp="TextBox_PreviewKeyDown" x:Name="txtPath" Width="600" Height="30" Margin="15,10,15,10" VerticalAlignment="Center"   />
        <Button Content="Generate Files" Width="100" Height="30" Click="OkButton_Click" Margin="0,10,0,10" />
    </StackPanel>
    
</UserControl>